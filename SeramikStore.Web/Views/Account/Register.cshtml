@using SeramikStore.Entities;
@model AuthenticatedUser

@{
    ViewData["Title"] = "Register";
}


<form asp-action="Register" method="Post">
    <div class="container vh-100">
        <div class="row justify-content-center align-items-center h-100">
            <div class="col-md-6">
                <h2 class="text-center mb-4">Register</h2>
                <form id="registrationForm">
                    <div class="mb-3">
                        <div class="input-group">
                            <span class="input-group-text"><i class="bi bi-person-fill"></i></span>
                            <input asp-for="Name" type="text" class="form-control" id="Name" placeholder="Name" required />
                            <span asp-validation-for="Name" class="text-danger"></span>
                        </div>
                    </div>
                    <div class="mb-3">
                        <div class="input-group">
                            <span class="input-group-text"><i class="bi bi-person-fill"></i></span>
                            <input asp-for="Email" type="text" class="form-control" id="Email" placeholder="Email" required />
                            <span asp-validation-for="Email" class="text-danger"></span>
                        </div>
                    </div>
                    <div class="mb-3">
                        <div class="input-group">
                            <span class="input-group-text"><i class="bi bi-person-fill"></i></span>
                            <input asp-for="TelephoneNumber" type="text" class="form-control" id="Contact" placeholder="Contact" required />
                            <span asp-validation-for="TelephoneNumber" class="text-danger"></span>

                        </div>
                    </div>
                    <div class="mb-3">
                        <div class="input-group">
                            <span class="input-group-text"><i class="bi bi-person-fill"></i>Address</span>
                            <TextArea asp-for="Address" class="form-control" id="Address" placeholder="Address">

                            </TextArea>
                            <span asp-validation-for="Address" class="text-danger"></span>
                        </div>
                    </div>
                    <div class="mb-3">
                        <div class="input-group">
                            <span class="input-group-text"><i class="bi bi-lock-fill"></i></span>
                            <input asp-for="Password" class="form-control" id="password" placeholder="Password" required />

                            <span asp-validation-for="Password" class="text-danger"></span>

                        </div>
                    </div>
                    <div class="mb-3">
                        <div class="input-group">
                            <span class="input-group-text"><i class="bi bi-lock-fill"></i></span>
                            <input asp-for="ConfirmPassword" class="form-control" id="confirmPassword" placeholder="ConfirmPassword" required />

                            <span asp-validation-for="ConfirmPassword" class="text-danger"></span>
                        </div>
                    </div>
                    <button type="submit" class="btn btn-primary w-100">Register</button>
                </form>
            </div>
        </div>
    </div>
</form>
@section scripts{
    <partial name="_ValidationScriptsPartial"></partial>
}




