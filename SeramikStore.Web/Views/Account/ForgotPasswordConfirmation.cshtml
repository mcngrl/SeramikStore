@using Microsoft.Extensions.Localization
@using SeramikStore.Web.Localization
@inject IStringLocalizer<AccountResource> L

@{
    ViewData["Title"] = L["Şifre Sıfırlama"];
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container mt-5 d-flex align-items-center justify-content-center">
    <div class="row w-100 justify-content-center">
        <div class="col-md-6 col-sm-10">
            <div class="card shadow-lg border-0">
                <div class="card-header text-center bg-primary text-white">
                    <h4 class="mb-0">
                        @L["Şifre Sıfırlama Talebi"]
                    </h4>
                </div>

                <div class="card-body text-center p-4">
                    <p class="fs-5 mb-4">
                        @L["Şifre sıfırlama bağlantısı gönderilmiştir."]
                    </p>

                    <p class="text-muted mb-4">
                        @L["Lütfen email kutunuzu ve spam klasörünü kontrol edin."]
                    </p>

                    <a asp-controller="Account"
                       asp-action="Login"
                       class="btn btn-primary">
                        @L["Giriş Sayfasına Dön"]
                    </a>
                </div>
            </div>
        </div>
    </div>
</div>
