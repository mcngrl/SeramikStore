@model IEnumerable<SeramikStore.Web.ViewModels.UserAddressViewModel>
@{
    ViewData["Title"] = "Adres Bilgilerim";
}

<div class="container mt-4">
    <div class="row">

        <!-- ================= SOL MENÜ ================= -->
        <div class="col-md-3">
            <div class="card mb-3">
                <div class="card-body">
                    <strong>@Context.Session.GetString("userName")</strong><br />
                    <small class="text-muted">@Context.Session.GetString("email")</small>
                </div>
            </div>

            <div class="list-group">
                <a asp-controller="Account" asp-action="Profile"
                   class="list-group-item list-group-item-action">
                    Kullanıcı Bilgilerim
                </a>

                <a asp-controller="UserAddress" asp-action="Index"
                   class="list-group-item list-group-item-action active">
                    Adres Bilgilerim
                </a>

                <a asp-controller="Account" asp-action="ChangePassword"
                   class="list-group-item list-group-item-action">
                    Şifre Değişikliği
                </a>

                <a asp-controller="Order" asp-action="Index"
                   class="list-group-item list-group-item-action">
                    Siparişlerim
                </a>
            </div>
        </div>

        <!-- ================= SAĞ İÇERİK ================= -->
        <div class="col-md-9">
            <div class="card mb-3">
                <div class="card-body d-flex justify-content-between align-items-center">
                    <h5 class="mb-0">Adres Bilgilerim</h5>
                    <a asp-action="Create" class="btn btn-outline-primary btn-sm">
                        <i class="bi bi-plus"></i> Yeni Adres Ekle
                    </a>
                </div>
            </div>

            <div class="row">
                @foreach (var item in Model)
                {
                    <div class="col-md-6 mb-4">
                        <div class="card h-100 shadow-sm">
                            <div class="card-body">

                                <div class="d-flex justify-content-between">
                                    <strong>@item.Baslik</strong>

                                    @if (item.IsDefault)
                                    {
                                        <span class="badge bg-success">Varsayılan</span>
                                    }
                                </div>

                                <hr />

                                <p class="mb-1">
                                    <strong>@item.Ad @item.Soyad</strong>
                                </p>

                                <p class="mb-1">
                                    @item.Mahalle
                                </p>

                                <p class="mb-1">
                                    @item.Adres
                                </p>

                                <p class="mb-1">
                                    @item.Ilce / @item.Il
                                </p>

                                <p class="text-muted">
                                    @item.Telefon
                                </p>
                            </div>

                            <div class="card-footer bg-white d-flex justify-content-between">
                                <a asp-action="Edit" asp-route-id="@item.Id"
                                   class="btn btn-outline-warning btn-sm">
                                    Adresi Düzenle
                                </a>

                                <a asp-action="Delete" asp-route-id="@item.Id"
                                   class="btn btn-outline-danger btn-sm"
                                   onclick="return confirm('Bu adres silinsin mi?')">
                                    Sil
                                </a>
                            </div>
                        </div>
                    </div>
                }
            </div>

        </div>
    </div>
</div>
