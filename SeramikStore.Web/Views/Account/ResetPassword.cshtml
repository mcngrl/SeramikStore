@using Microsoft.Extensions.Localization
@using SeramikStore.Web.Localization
@inject IStringLocalizer<AccountResource> L
@model SeramikStore.Web.ViewModels.ResetPasswordViewModel
@{
    ViewData["Title"] = L["Şifre Sıfırlama"];
}

<div class="container mt-5 d-flex justify-content-center">
    <div class="col-md-5">
        <div class="card shadow border-0">
            <div class="card-header bg-primary text-white text-center">
                <h4>@L["Yeni Şifre Belirleme"]</h4>
            </div>
            <div class="card-body">
                <form asp-action="ResetPassword" method="post">
                    @Html.HiddenFor(x => x.Email)
                    @Html.HiddenFor(x => x.Token)

                    <div class="mb-3">
                        <label class="form-label">@L["Yeni Şifre"]</label>
                        <input asp-for="Password" type="password" class="form-control" />
                        <span asp-validation-for="Password" class="text-danger"></span>
                    </div>

                    <div class="mb-3">
                        <label class="form-label">@L["Şifre Tekrar"]</label>
                        <input asp-for="ConfirmPassword" type="password" class="form-control" />
                        <span asp-validation-for="ConfirmPassword" class="text-danger"></span>
                    </div>

                    <button type="submit" class="btn btn-primary w-100">
                        @L["Şifreyi Güncelle"]
                    </button>
                </form>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
