@using Microsoft.Extensions.Localization
@using SeramikStore.Web.Localization
@using SeramikStore.Entities
@model Cart
@inject IStringLocalizer<CartResource> L

@{
    ViewData["Title"] = L["Sepetten Sil"];
}

<div class="container mt-5" style="max-width:700px;">

    <div class="card shadow-sm border-0">
        <div class="card-body">

            <h4 class="text-danger mb-3">
                🗑 @L["Ürünü Sepetten Kaldır"]
            </h4>

            <p class="text-muted">
                @L["Bu ürünü sepetinizden kaldırmak istediğinize emin misiniz?"]
            </p>

            <hr />

            <div class="row mb-2">
                <div class="col-5 fw-semibold">@L["Ürün Kodu"]</div>
                <div class="col-7">@Model.ProductCode</div>
            </div>

            <div class="row mb-2">
                <div class="col-5 fw-semibold">@L["Ürün Adı"]</div>
                <div class="col-7">@Model.ProductName</div>
            </div>

            <div class="row mb-2">
                <div class="col-5 fw-semibold">@L["Birim Fiyat"]</div>
                <div class="col-7">@Model.UnitPrice.ToString("N2")</div>
            </div>

            <div class="row mb-2">
                <div class="col-5 fw-semibold">@L["Adet"]</div>
                <div class="col-7">@Model.Quantity</div>
            </div>

            <div class="row mb-3">
                <div class="col-5 fw-semibold">@L["Toplam"]</div>
                <div class="col-7 fw-bold text-danger">
                    @Model.TotalAmount.ToString("N2")
                </div>
            </div>

            <form asp-action="DeleteCartItem" method="post">
                @Html.AntiForgeryToken()
                <input type="hidden" asp-for="Id" />

                <div class="d-flex justify-content-between mt-4">
                    <a asp-action="Summary"
                       class="btn btn-outline-secondary">
                        @L["Vazgeç"]
                    </a>

                    <button type="submit"
                            class="btn btn-danger px-4">
                        🗑 @L["Sil"]
                    </button>
                </div>
            </form>

        </div>
    </div>
</div>
