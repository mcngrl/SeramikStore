@using Microsoft.Extensions.Localization
@using SeramikStore.Web.Localization
@inject IStringLocalizer<CartResource> L

@{
    ViewData["Title"] = L["Sepetiniz Boş"];
}

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-6 text-center">
            <div class="card shadow-sm p-4">
                <div class="mb-3">
                    <i class="bi bi-cart-x" style="font-size:64px;color:#ccc;"></i>
                </div>

                <h4 class="mb-2">@L["Sepetiniz Boş"]</h4>

                <p class="text-muted">
                    @L["Sepetinizde henüz ürün bulunmamaktadır."]
                </p>

                <a asp-controller="Home"
                   asp-action="Index"
                   class="btn btn-warning mt-3">
                    @L["Alışverişe Başla"]
                </a>
            </div>
        </div>
    </div>
</div>
