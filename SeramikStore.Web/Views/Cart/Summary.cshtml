@using Microsoft.Extensions.Localization
@using SeramikStore.Web.Localization
@model SeramikStore.Services.DTOs.CartResultDto
@inject IStringLocalizer<CartResource> L
@using System.Globalization

@{
    ViewData["Title"] = L["Sepetim"];
    var culture = CultureInfo.CurrentCulture;
    var araToplam = Model.Summary.TotalAmount;
    var kargo = Model.Summary.CargoAmount;
    var toplam = Model.Summary.GrandTotal;
    var CurrencyCode = Model.Summary.CurrencyCode.ToString().ToUpper();
}

<div class="container mt-8">
    <h4 class="mb-3">
        @L["Sepetim"] (@Model.Items.Sum(x => x.Quantity) @L["Ürün"])
    </h4>

    <div class="row">
        <!-- SOL TARAF : SEPET LİSTESİ -->
        <div class="col-md-8">
            @foreach (var item in Model.Items)
            {
                <div class="card mb-3 border-0 shadow-sm cart-item-card">
                    <div class="card-body d-flex align-items-center justify-content-between">

                        <!-- SOL: ÜRÜN GÖRSEL -->
                        <div class="d-flex align-items-center" style="width:100px;">
                            <img src="@(string.IsNullOrEmpty(item.MainImagePath) ? "/images/no-image.png" : item.MainImagePath)"
                                 alt="@item.ProductName"
                                 style="max-height:90px;" />
                        </div>

                        <!-- ORTA: ÜRÜN BİLGİ -->
                        <div class="flex-grow-1 px-3">
                            <h6 class="mb-1 fw-semibold">@item.ProductName</h6>
                            <small class="text-muted">@L["Ürün Kodu"]: @item.ProductCode</small>
                        </div>

                        <!-- ADET KONTROL -->
                        <div class="d-flex align-items-center me-4">

                             <div class="quantity-box d-flex align-items-center">
                                <a asp-action="Decrease"
                                   asp-route-id="@item.Id"
                                   class="btn btn-light btn-sm">−</a>
                                <span class="mx-3">
                                    <span class="fw-bold fs-5 text-dark">@item.Quantity</span>
                                    <span class="fw-bold fs-10 text-dark">@L["Adet"]</span>
                                </span>
                                <a asp-action="Increase"
                                   asp-route-id="@item.Id"
                                   class="btn btn-light btn-sm">+</a>
                            </div>
                        </div>

                        <!-- FİYAT + SİL -->
                        <div class="text-end" style="min-width:140px;">
                            <div class="fw-bold fs-5">
                                @item.LineTotal.ToString("N2", culture) @item.CurrencyCode.ToString().ToUpper()
                            </div>
                            <a asp-action="DeleteCartItem"
                               asp-route-id="@item.Id"
                               class="text-muted small text-decoration-none remove-link">
                                <i class="bi bi-trash me-1"></i>@L["Sil"]
                            </a>
                        </div>

                    </div>
                </div>
            }
        </div>
        <div class="col-md-4">
            <div class="card shadow-sm">
                <div class="card-body">
                    <h5 class="mb-3">@L["Sipariş Özeti"]</h5>

                    <div class="d-flex justify-content-between mb-2">
                        <span>@L["Sipariş Tutarı"]</span>
                        <span>@araToplam.ToString("N2", culture) @CurrencyCode</span>
                    </div>

                    <div class="d-flex justify-content-between mb-2">
                        <span>@L["Kargo Tutarı"]</span>
                        <span>@kargo.ToString("N2", culture) @CurrencyCode</span>
                    </div>

                    <hr />

                    <div class="d-flex justify-content-between fw-bold fs-5">
                        <span>@L["Toplam Tutar"]</span>
                        <span>@toplam.ToString("N2", culture) @CurrencyCode</span>
                    </div>

                    <a asp-controller="Cart"
                        asp-action="AddressDetail"
                        class="btn btn-warning w-100 mt-3 @(Model.Items.Any() ? "" : "disabled")"
                        tabindex="@(Model.Items.Any() ? "0" : "-1")"
                        aria-disabled="@(Model.Items.Any() ? "false" : "true")">
                        @L["Alışverişi Tamamla"]
                    </a>

                </div>
            </div>
        </div>
        
    </div>
</div>


