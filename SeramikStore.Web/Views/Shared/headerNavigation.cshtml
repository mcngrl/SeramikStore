@inject Microsoft.AspNetCore.Http.IHttpContextAccessor HttpContextAccessor
@* <nav class="navbar navbar-expand-lg navbar-dark bg-dark"> 
<nav class="navbar navbar-expand-lg bg-primary>*@
<nav class="navbar navbar-expand-lg navbar-dark bg-primary">
    <div class="container">
        <!-- LOGO -->
        <a class="navbar-brand fw-bold" asp-controller="Home" asp-action="Index">
            SeramikStore
        </a>

        <!-- MOBILE TOGGLE -->
        <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#mainNavbar">
            <span class="navbar-toggler-icon"></span>
        </button>

        <div class="collapse navbar-collapse" id="mainNavbar">
            <!-- SOL MENÜ -->
            <ul class="navbar-nav me-auto mb-2 mb-lg-0">
                <li class="nav-item">
                    <a class="nav-link" asp-controller="Home" asp-action="Index">Ürünler</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" asp-controller="Home" asp-action="About">Hakkımızda</a>
                </li>

     
                @if (HttpContextAccessor.HttpContext.Session.GetString("role") == "Admin")
                {
                    <li class="nav-item dropdown">
                        <a class="nav-link dropdown-toggle" href="#" id="accountDropdown"
                           role="button" data-bs-toggle="dropdown">
                            <i class="fas fa-user"></i> Yönetim
                        </a>

                        <ul class="dropdown-menu dropdown-menu-end">
                            <li>
                                <a class="dropdown-item" asp-action="Index" asp-controller="Product">Ürünler</a>
                            </li>
                            <li>
                                <a class="dropdown-item" asp-controller="Currency">Para Birimleri</a>
 
                            </li>
                            <li>
                                <a class="dropdown-item" asp-action="Index" asp-controller="Category">Kategoriler</a>
                            </li>
                            <li><hr class="dropdown-divider"></li>
                            <li>
                                <a class="dropdown-item" asp-action="Index" asp-controller="Order">Müşteri Siparişleri</a>
                            </li>
                            <li>
                                <a class="dropdown-item" asp-action="Index" asp-controller="Order">Orders</a>
                            </li>

                        </ul>
                    </li>
                }
            </ul>




            <!-- SAĞ MENÜ -->
 
            <ul class="navbar-nav ms-auto">

                <!-- 🛒 SEPET -->
                <li class="nav-item">
                    <a class="nav-link" asp-controller="Carts" asp-action="Index">
                        <i class="fas fa-shopping-cart"></i> Sepetim  @await Component.InvokeAsync("Cart")
                    </a>
                </li>
                @{
                    var userName = Context.Session.GetString("userName");
                }

                @if (string.IsNullOrEmpty(userName))
                {
                    <!-- Giriş yapılmamış -->
                    <li class="nav-item">
                        <a class="nav-link" asp-controller="Account" asp-action="Login">
                            <i class="fas fa-sign-in-alt"></i> Giriş Yap
                        </a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" asp-controller="Account" asp-action="Register">
                            <i class="fas fa-user-plus"></i> Kayıt Ol
                        </a>
                    </li>
                }
                else
                {
                    <!-- Hesabım Dropdown -->
                    <li class="nav-item dropdown">
                        <a class="nav-link dropdown-toggle" href="#" id="accountDropdown"
                           role="button" data-bs-toggle="dropdown">
                            <i class="fas fa-user"></i> @userName
                        </a>

                        <ul class="dropdown-menu dropdown-menu-end">
                            <li>
                                <a class="dropdown-item" asp-controller="Account" asp-action="Profile">
                                    <i class="fas fa-id-card"></i> Profilim
                                </a>
                            </li>
                            <li>
                                <a class="dropdown-item" asp-controller="Order" asp-action="Index">
                                    <i class="fas fa-box"></i> Siparişlerim
                                </a>
                            </li>
                            <li>
                                <a class="dropdown-item" asp-controller="Carts" asp-action="Index">
                                    <i class="fas fa-shopping-cart"></i> Sepetim  @await Component.InvokeAsync("Cart")
                                </a>
                            </li>
                            <li><hr class="dropdown-divider"></li>
                            <li>
                                <a class="dropdown-item text-danger" asp-controller="Account" asp-action="Logout">
                                    <i class="fas fa-sign-out-alt"></i> Çıkış Yap
                                </a>
                            </li>
                        </ul>
                    </li>
                }
            </ul>
        </div>
    </div>
</nav>
