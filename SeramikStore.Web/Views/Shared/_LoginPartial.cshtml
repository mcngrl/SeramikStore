@inject IHttpContextAccessor HttpContextAccessor
@if (HttpContextAccessor.HttpContext.Session.GetString("userName") != null)
{
    <ul class="navbar-nav">
        <li class="nav-item">
            <a class="nav-link text-dark">Welcome @HttpContextAccessor.HttpContext.Session.GetString("userName")</a>
        </li>

        <li class="nav-item"><a asp-action="Logout" class="nav-link text-dark" asp-controller="Account">Log out</a></li>
    </ul>
}
else
{
    <ul class="navbar-nav">
        <li class="nav-item"><a asp-action="Login" class="nav-link text-dark" asp-controller="Account">Login</a></li>

        <li class="nav-item"><a asp-action="Register" class="nav-link text-dark" asp-controller="Account">Register</a></li>
    </ul>

}