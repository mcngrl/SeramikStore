@using Microsoft.AspNetCore.Mvc.Localization
@model IEnumerable<SeramikStore.Web.ViewModels.Category.CategoryListViewModel>
@inject IViewLocalizer L

<h2>@L["Title"]</h2>

<a asp-action="Create" class="btn btn-sm btn-outline-success rounded-pill px-4 mb-3">
    <i class="fa fa-file me-1"></i>@L["New"]
</a>

<table class="table table-bordered">
    <thead>
        <tr>
            <th>@L["Id"]</th>
            <th>@L["Name"]</th>
            <th>@L["IsActive"]</th>
            <th style="width:200px"></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.Id</td>
                <td>@item.Name</td>
                <td>@item.IsActive</td>
                <td class="text-nowrap">
                    <a class="btn btn-sm btn-outline-warning rounded-pill px-3 me-1"
                       asp-action="Edit"
                       asp-route-id="@item.Id">
                        <i class="fa fa-edit me-1"></i>@L["Edit"]
                    </a>

                    <a class="btn btn-sm btn-outline-primary rounded-pill px-3 me-1"
                       asp-action="Detail"
                       asp-route-id="@item.Id">
                        <i class="fa fa-eye me-1"></i>@L["Detail"]
                    </a>

                    <a class="btn btn-sm btn-outline-danger rounded-pill px-3"
                       asp-action="Delete"
                       asp-route-id="@item.Id">
                        <i class="fa fa-trash me-1"></i>@L["Delete"]
                    </a>
                </td>
            </tr>
        }
    </tbody>
</table>
