@using Microsoft.Extensions.Localization
@using SeramikStore.Web.Localization
@model SeramikStore.Web.ViewModels.Category.CategoryCreateViewModel

@inject IStringLocalizer<CategoryResource> L
@inject IStringLocalizer<CommonResource> C
<br>
<div class="row justify-content-center">
    <div class="col-md-6">
        <div class="card shadow-sm border-1">
            <div class="card-header bg-light fw-semibold">
                <i class="fa fa-plus me-2"></i>@L["CreateTitle"]
            </div>

            <div class="card-body">
                <form asp-action="Create" method="post">
                    @Html.AntiForgeryToken()

                    <div asp-validation-summary="ModelOnly"
                         class="alert alert-danger small"></div>

                    <!-- NAME -->
                    <div class="mb-3">
                        <label asp-for="Name" class="form-label fw-semibold"></label>
                        <input asp-for="Name"
                               class="form-control"
                               placeholder="@L["NamePlaceholder"]" />
                        <span asp-validation-for="Name"
                              class="text-danger small"></span>
                    </div>

                    <!-- BUTTONS -->
                    <div class="d-flex justify-content-end gap-2 mt-4">
                        <a asp-action="Index"
                           class="btn btn-sm btn-outline-secondary rounded-pill px-4">
                            <i class="fa fa-times me-1"></i>@C["Cancel"]
                        </a>

                        <button type="submit"
                                class="btn btn-sm btn-outline-success rounded-pill px-4">
                            <i class="fa fa-save me-1"></i>@C["Save"]
                        </button>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
