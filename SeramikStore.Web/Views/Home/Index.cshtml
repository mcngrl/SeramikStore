@model IEnumerable<SeramikStore.Services.DTOs.ProductListForHomeDto>

@{
    ViewData["Title"] = "Ürünler";
}

<div class="container-fluid px-4 mt-4">
    <div class="row g-3">
        @foreach (var item in Model)
        {
            <div class="col-xl-2 col-lg-3 col-md-4 col-sm-6">
                <a asp-action="Details"
                   asp-controller="Home"
                   asp-route-id="@item.Id"
                   class="text-decoration-none text-dark">

                    <div class="product-card-amazon">

                        <!-- IMAGE -->
                        <div class="product-img-box">
                            <img src="@(string.IsNullOrEmpty(item.MainImagePath)
                                                                     ? "/images/no-image.png"
                                                                     : item.MainImagePath)"
                             alt="@item.ProductName" />
                    </div>

                        <!-- BODY -->
                        <div class="product-body">
                            <div class="product-title">
                                @item.ProductName
                            </div>

                            <div class="product-price">
                                @item.UnitPrice.ToString("N2", new System.Globalization.CultureInfo("tr-TR"))
                                <span class="currency">@item.CurrencySymbol</span>
                            </div>
                        </div>

                    </div>
                </a>
            </div>
                }
    </div>
</div>
