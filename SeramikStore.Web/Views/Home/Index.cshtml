@model IEnumerable<SeramikStore.Web.ViewModels.ProductForListingViewModel>

@{
    ViewData["Title"] = "Index";
}


<div class="row mt-2">
    @foreach (var item in Model)
    {

        <div class="col-md-3">
            <div class="card" style="width: 12rem;">
                @* <img class="card-img-top" src="~/Images/@item.PictureUri" alt="Card image cap"> *@
                <img class="card-img-top" src="~/Images/f01.jpg" alt="Card image cap">
                <div class="card-body">
                    <h5 class="card-title">@item.ProductName</h5>
                    <h6 class="card-title"><i class="fas fa-euro-sign"></i> @item.UnitPrice </h6>

                    <a asp-action="Details" asp-controller="Home" asp-route-id="@item.Id" class="btn btn-primary">Details</a>
                </div>
            </div>
        </div>

    }
</div>

