@model IEnumerable<SeramikStore.Services.DTOs.ProductListForHomeDto>

@{
    ViewData["Title"] = "Ürünler";
}

<div class="container mt-4">
    <div class="row g-4">

        @foreach (var item in Model)
        {
            <div class="col-lg-3 col-md-4 col-sm-6">
                <div class="card h-100 shadow-sm product-card">

                    <!-- ÜRÜN RESMİ -->
                    <div class="product-image-wrapper">
                        <img src="@(string.IsNullOrEmpty(item.MainImagePath)
                                                                 ? "/images/no-image.png"
                                                                 : item.MainImagePath)"
                         alt="@item.ProductName"
                         class="product-image" />
                </div>

                    <!-- ÜRÜN BİLGİLERİ -->
                    <div class="card-body d-flex flex-column">
                        <h6 class="product-title">@item.ProductName</h6>

                        <div class="mt-auto">
                            <div class="product-price">
                                @item.UnitPrice.ToString("N2", new System.Globalization.CultureInfo("tr-TR"))
                                @item.CurrencySymbol
                            </div>

                        @if (item.AvailableForSale)
                            {
                                <form asp-controller="Cart"
                                      asp-action="Add"
                                      method="post">
                                    <input type="hidden" name="productId" value="@item.Id" />
                                    <button type="submit"
                                            class="btn btn-sm btn-primary w-100 mt-2">
                                        🛒 Sepete Ekle
                                    </button>
                                </form>
                            }
                            else
                            {
                                <button class="btn btn-sm btn-secondary w-100 mt-2" disabled>
                                    Stokta Yok
                                </button>
                            }
                        </div>
                    </div>
                </div>
            </div>
        }

    </div>
</div>
