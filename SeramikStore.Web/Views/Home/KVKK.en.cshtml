@inject Microsoft.Extensions.Options.IOptions<SeramikStore.Web.Options.CompanyOptions> Company
@{
    ViewData["Title"] = "Personal Data Protection Notice";
}

<div class="container py-5">
    <div class="row justify-content-center">
        <div class="col-lg-8 col-md-10">

            <h1 class="mb-4 text-center">Personal Data Protection Notice</h1>

            <p>
                This notice has been prepared in accordance with the Turkish Personal Data Protection Law No. 6698 (KVKK).
            </p>

            <h4 class="mt-4">1. Data Controller</h4>
            <p>
                Your personal data is processed by <strong>@Company.Value.Name</strong> as the data controller.
            </p>

            <h4 class="mt-4">2. Processed Personal Data</h4>
            <ul>
                <li>Name and surname</li>
                <li>Email address</li>
                <li>Phone number</li>
                <li>Billing and delivery address</li>
                <li>Order-related information</li>
                <li>IP and website usage data</li>
            </ul>

            <h4 class="mt-4">3. Purpose of Processing</h4>
            <ul>
                <li>Order and delivery processes</li>
                <li>Payment and invoicing</li>
                <li>Customer communication</li>
                <li>Legal obligations</li>
            </ul>

            <h4 class="mt-4">4. Data Transfer</h4>
            <p>
                Personal data may be transferred to shipping companies, payment service providers,
                and authorized public institutions when legally required.
            </p>

            <h4 class="mt-4">5. Your Rights</h4>
            <p>
                You may request access, correction, deletion, or restriction of your personal data.
            </p>

            <p class="fw-bold">
                Contact: 📧 @Company.Value.Email
            </p>

        </div>
    </div>
</div>
