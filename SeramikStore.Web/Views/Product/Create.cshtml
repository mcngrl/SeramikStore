@model SeramikStore.Web.ViewModels.ProductCreateViewModel

<h2>Create Product</h2>

<form asp-action="Create" method="post">
    @Html.AntiForgeryToken()

    <div class="form-group">
        <label asp-for="Product.ProductCode"></label>
        <input asp-for="Product.ProductCode" class="form-control" />
        <span asp-validation-for="Product.ProductCode" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="Product.ProductName"></label>
        <input asp-for="Product.ProductName" class="form-control" />
    </div>

    <div class="form-group">
        <label asp-for="Product.ProductDesc"></label>
        <textarea asp-for="Product.ProductDesc" class="form-control"></textarea>
    </div>


    <div class="form-group">
        <label asp-for="Product.UnitPrice"></label>
        <input asp-for="Product.UnitPrice" class="form-control" />
    </div>

    <!-- CURRENCY DROPDOWN -->
    <div class="form-group">
        <label>Currency</label>
        <select asp-for="Product.CurrencyId"
                asp-items="Model.Currencies"
                class="form-control">
            <option value="">-- Select Currency --</option>
        </select>
    </div>

    <div class="form-group form-check">
        <input asp-for="Product.AvailableForSale" class="form-check-input" />
        <label asp-for="Product.AvailableForSale" class="form-check-label"></label>
    </div>

    <button type="submit" class="btn btn-success">Save</button>
    <a asp-action="Index" class="btn btn-secondary">Cancel</a>
</form>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
