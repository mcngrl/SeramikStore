@using System.Globalization
@model SeramikStore.Web.ViewModels.ProductCreateViewModel

<h2>Create Product</h2>

<form asp-action="Create" method="post">
    @Html.AntiForgeryToken()

    <div class="form-group">
        <label asp-for="ProductCode"></label>
        <input asp-for="ProductCode" class="form-control" />
        <span asp-validation-for="ProductCode" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="ProductName"></label>
        <input asp-for="ProductName" class="form-control" />
    </div>

    <div class="form-group">
        <label asp-for="ProductDesc"></label>
        <textarea asp-for="ProductDesc" class="form-control"></textarea>
    </div>


    <div class="form-group">
        <label asp-for="UnitPrice"></label>
        <input asp-for="UnitPrice" class="form-control" placeholder="Örn: 1.250,67" />
        <span asp-validation-for="UnitPrice" class="text-danger"></span>
    </div>



    <div class="form-group">
        <label>Kategori</label>
        <select asp-for="CategoryId"
                asp-items="Model.Categories"
                class="form-control">
            <option value="">-- Kategori Seçiniz.--</option>
        </select>
    </div>

    <!-- CURRENCY DROPDOWN -->
    <div class="form-group">
        <label>Currency</label>
        <select asp-for="CurrencyId"
                asp-items="Model.Currencies"
                class="form-control">
            <option value="">-- Select Currency --</option>
        </select>
    </div>

    <div class="form-group form-check">
        <input asp-for="AvailableForSale" class="form-check-input" />
        <label asp-for="AvailableForSale" class="form-check-label"></label>
    </div>

    <button type="submit" class="btn btn-success">Save</button>
    <a asp-action="Index" class="btn btn-secondary">Cancel</a>
</form>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
