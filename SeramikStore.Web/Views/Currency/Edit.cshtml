@model SeramikStore.Entities.Currency

<h2>Edit Currency</h2>

<form asp-action="Edit" method="post">
    @Html.AntiForgeryToken()

    <!-- Hidden Id -->
    <input type="hidden" asp-for="CurrencyId" />

    <div class="form-group">
        <label>Code</label>
        <input asp-for="Code" class="form-control" />
        <span asp-validation-for="Code" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label>Name</label>
        <input asp-for="Name" class="form-control" />
        <span asp-validation-for="Name" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label>Symbol</label>
        <input asp-for="Symbol" class="form-control" />
        <span asp-validation-for="Symbol" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label>Exchange Rate</label>
        <input asp-for="ExchangeRate" class="form-control" />
        <span asp-validation-for="ExchangeRate" class="text-danger"></span>
    </div>

    <div class="form-group form-check">
        <input asp-for="IsDefault" class="form-check-input" />
        <label class="form-check-label">Default Currency</label>
    </div>

    <div class="form-group form-check">
        <input asp-for="IsActive" class="form-check-input" />
        <label class="form-check-label">Active</label>
    </div>

    <button type="submit" class="btn btn-success">Update</button>
    <a asp-action="Index" class="btn btn-secondary">Cancel</a>
</form>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
