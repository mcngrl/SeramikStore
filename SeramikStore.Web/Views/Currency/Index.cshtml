@model List<SeramikStore.Entities.Currency>

<h2>Currency List</h2>

<a asp-controller="Currency" asp-action="Create" class="btn btn-primary">New Currency</a>

<table class="table table-bordered mt-3">
    <thead>
        <tr>
            <th>Code</th>
            <th>Name</th>
            <th>Symbol</th>
            <th>Rate</th>
            <th>Default</th>
            <th>Active</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.Code</td>
                <td>@item.Name</td>
                <td>@item.Symbol</td>
                <td>@item.ExchangeRate</td>
                <td>@item.IsDefault</td>
                <td>@item.IsActive</td>
                <td>
                    <a asp-action="Edit" asp-route-id="@item.CurrencyId">Edit</a> |
                    <a asp-action="Delete" asp-route-id="@item.CurrencyId">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>
