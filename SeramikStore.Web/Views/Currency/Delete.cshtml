@model SeramikStore.Entities.Currency

<h2>Delete Currency</h2>

<div class="alert alert-danger">
    Are you sure you want to delete this currency?
</div>

<dl class="row">
    <dt class="col-sm-3">Code</dt>
    <dd class="col-sm-9">@Model.Code</dd>

    <dt class="col-sm-3">Name</dt>
    <dd class="col-sm-9">@Model.Name</dd>

    <dt class="col-sm-3">Symbol</dt>
    <dd class="col-sm-9">@Model.Symbol</dd>

    <dt class="col-sm-3">Exchange Rate</dt>
    <dd class="col-sm-9">@Model.ExchangeRate</dd>

    <dt class="col-sm-3">Default</dt>
    <dd class="col-sm-9">@Model.IsDefault</dd>
</dl>

<form asp-action="DeleteConfirmed" method="post">
    @Html.AntiForgeryToken()

    <input type="hidden" name="currencyId" value="@Model.CurrencyId" />

    <button type="submit" class="btn btn-danger">Delete</button>
    <a asp-action="Index" class="btn btn-secondary">Cancel</a>
</form>
